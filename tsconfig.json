{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext", "ES2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/web/components/*"],
      "@assets/*": ["src/web/assets/*"],
      "@pages/*": ["src/web/pages/*"],
      "@layouts/*": ["src/web/layouts/*"],
      "@service/*": ["src/web/service/*"],
      "@hooks/*": ["src/web/hooks/*"],
      "@store/*": ["src/web/store/*"],
      "@utils/*": ["src/web/utils/*"],
      "@lib/*": ["src/web/lib/*"],
      "@constants/*": ["src/web/constants/*"],
      "@connector/*": ["src/web/connector/*"],
      "@states/*": ["src/web/states/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "build", "scripts"]
}
